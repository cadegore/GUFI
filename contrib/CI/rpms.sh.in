set -e

# install rpmbuild
dnf install -y rpm-build

# reconfigure CMake
cmake @CMAKE_SOURCE_DIR@

# make the RPM
make package

# list the files in the server RPM
rpm -ql gufi-server*.rpm | sed '/.*\.build-id/d' | sort

# list the files in the client RPM
rpm -ql gufi-client*.rpm | sort

# install the RPM
dnf install -y gufi-server-*.rpm

# compare the configuration files
@DIFF@ server.example "$(dirname @SERVER_CONFIG@)/server.example"

# uninstall GUFI-Server
dnf autoremove -y GUFI-Server

# upgrade pip to get the latest Python dependencies
python3 -m pip install --upgrade pip

# install the client RPM
dnf install -y gufi-client-*.rpm

# compare the configuration files
@DIFF@ client.example "$(dirname @CLIENT_CONFIG@)/client.example"
